{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-fullstack-app/shared/ui-forms": ["libs/shared/src/index.ts"],
      "@my-fullstack-app/feature-candidates": [
        "libs/candidates/feature-candidates/src/index.ts"
      ],
      "@my-fullstack-app/candidates-api": [
        "libs/candidates/candidates-api/src/index.ts"
      ],
      "@my-fullstack-app/candidates-shell": [
        "libs/candidates/candidates-shell/src/index.ts"
      ],
      "@my-fullstack-app/ui-components": [
        "libs/shared/ui-components/ui-components/src/index.ts"
      ],
      "@my-fullstack-app/ui-form-fields": [
        "libs/shared/ui-form-fields/ui-form-fields/src/index.ts"
      ],
      "@my-fullstack-app/data-access": [
        "libs/candidates/candidates-data-access/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
